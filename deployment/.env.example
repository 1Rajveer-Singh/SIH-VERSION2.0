# Environment Configuration for Rockfall Prediction System
# Copy to .env and update values for your deployment

# Database Configuration
MONGO_ROOT_USERNAME=rockfall_admin
MONGO_ROOT_PASSWORD=your_secure_mongo_password_here
MONGO_DATABASE=rockfall_prediction

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here

# Application Security
JWT_SECRET_KEY=your_super_secret_jwt_key_change_this_in_production
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# External Services - Twilio SMS
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# External Services - SendGrid Email
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=alerts@yourdomain.com

# External Services - Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# External Services - AWS S3 Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=rockfall-predictions-storage
AWS_BACKUP_BUCKET=rockfall-backups
AWS_REGION=us-west-2

# SMTP Configuration (Alternative to SendGrid)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Monitoring and Analytics
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=secure_grafana_password

# Machine Learning Configuration
GPU_ENABLED=false
MODEL_VERSION=latest

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# System Configuration
LOG_LEVEL=INFO
MAX_UPLOAD_SIZE=100MB
SESSION_TIMEOUT=3600

# Production Domain
DOMAIN=yourdomain.com
SSL_EMAIL=admin@yourdomain.com

# Feature Flags
ENABLE_DEMO_MODE=false
ENABLE_API_RATE_LIMITING=true
ENABLE_REAL_TIME_ALERTS=true
ENABLE_ML_PREDICTIONS=true

# Performance Tuning
WORKER_PROCESSES=4
MAX_CONNECTIONS=1000
DATABASE_POOL_SIZE=20
CACHE_TTL=300

# Security Settings
ENABLE_2FA=true
PASSWORD_MIN_LENGTH=8
SESSION_SECURE=true
CSRF_PROTECTION=true

# Notification Preferences
DEFAULT_ALERT_CHANNELS=email,sms
HIGH_RISK_CHANNELS=email,sms,slack,webhook
EMERGENCY_CHANNELS=email,sms,slack,webhook,push

# Geolocation Services
MAPBOX_API_KEY=your_mapbox_api_key
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Weather Services
OPENWEATHER_API_KEY=your_openweather_api_key
WEATHER_UPDATE_INTERVAL=300

# Data Processing
SENSOR_DATA_BATCH_SIZE=1000
PREDICTION_INTERVAL=60
DATA_RETENTION_MONTHS=36

# Development/Testing (Not for Production)
DEBUG=false
ENABLE_CORS_DEV=false
MOCK_EXTERNAL_SERVICES=false
TEST_DATABASE_URL=mongodb://localhost:27017/rockfall_test